<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Correct Toolbar using androidx.appcompat.widget.Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF5722"
        android:title="Current Order"
        android:titleTextColor="@android:color/white"
        android:layout_alignParentTop="true"
        app:titleTextColor="@android:color/white"/>

    <!-- Order details -->
    <TextView
        android:id="@+id/tv_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="16dp"
        android:text="Order Details"
        android:textSize="16sp"/>

    <!-- Order status -->
    <TextView
        android:id="@+id/tv_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_order_details"
        android:layout_marginTop="16dp"
        android:text="Order Status: In Progress"
        android:textSize="16sp"/>

    <!-- Toggle status button -->
    <ToggleButton
        android:id="@+id/toggle_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_order_status"
        android:layout_marginTop="16dp"
        android:textOn="Completed"
        android:textOff="In Progress" />

</RelativeLayout>